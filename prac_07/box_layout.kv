BoxLayout:
    orientation: 'vertical'
    Button:
        text: 'Clear'
        on_press: app.handle_clear()
    TextInput:
        id: input_name
        text: app.name_input
    Button:
        text: 'Greet'
        on_press: app.handle_greet()
    Label:
        id: output_label
        color: (1, 1, 0, 1)
        text: app.greeting_message
